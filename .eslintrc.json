{
  "env": {
    "browser": true,
    "es2021": true
  },
  //   "extends": ["prettier"],
  //   "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["warn", "single"],
    "semi": ["error", "never"],
    // https://eslint.org/docs/rules/
    "no-unused-vars": "warn",
    // "prettier/prettier": "error",
    "prefer-const": "off",
    "object-shorthand": "off",
    "no-debugger": "warn",
    "func-names": "off",
    "no-plusplus": ["off", { "allowForLoopAfterthoughts": true }]
  }
}
